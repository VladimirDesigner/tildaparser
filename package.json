{
    "author": {
        "name": "Дмитрий Сединкин",
        "url": "https://github.com/dsedinkin"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dsedinkin/tilda.git"
    },
    "scripts": {
        "build": "yarn test && tsc && cp -r static/* ./dist",
        "start": "yarn build && cross-env NODE_PATH=./dist nodemon",
        "release": "yarn build && git subtree push --prefix dist https://github.com/dsedinkin/tilda.git release",
        "test": "jest --config jest.config.json"
    },
    "nodemonConfig": {
        "watch": [
            "src",
            "index.ts"
        ],
        "ext": "ts",
        "exec": "tsc && ts-node index.ts"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/gradient-parser": "^0.1.2",
        "@types/jest": "^28.1.4",
        "@types/node": "^18.0.6",
        "benchmark": "^2.1.4",
        "dotenv": "^16.0.0",
        "jest": "^28.1.2",
        "nodemon": "^2.0.19",
        "ts-jest": "^28.0.5",
        "ts-node": "^10.8.2",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "body-parser": "^1.20.0",
        "cheerio": "^1.0.0-rc.12",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "css-box-shadow": "dsedinkin/css-box-shadow#latest",
        "css-to-object": "dsedinkin/css-to-object#latest",
        "express": "^4.18.1",
        "gradient-parser": "^1.0.2",
        "nodemon": "^2.0.19",
        "rgb-to-hex": "dsedinkin/rgb-to-hex#latest",
        "yarn": "^1.22.19"
    }
}
